# =============================================================================

# ===========================================
# Spring Profile
# ===========================================
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# MongoDB Configuration
# ===========================================
# Root admin password (used by mongo-init.js)
MONGO_ROOT_PASSWORD=ChangeThisPassword123

# Application user credentials
MONGO_APP_USER=ensureu
MONGO_APP_PASSWORD=your-mongo-password
MONGO_DATABASE=ensureu

# Full MongoDB URI (used by Spring Boot)
# For Docker: use 'mongodb' as host
# For local: use 'localhost'
MONGODB_URI=mongodb://ensureu:Ensureu%40india123@mongodb:27017/ensureu?authSource=ensureu
SIMPLE_DATA_MONGODB_URI=mongodb://ensureu:Ensureu%40india123@mongodb:27017/ensureu?authSource=ensureu

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-jwt-secret
SPRING_JWT_SECRET=your-jwt-secret
SPRING_JWT_EXPIRATION=3600

# ===========================================
# Email Configuration (Gmail SMTP)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password

# ===========================================
# Google OAuth
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id

# ===========================================
# Storage Configuration
# ===========================================
# Options: LOCAL, S3
STORAGE_TYPE=S3

# S3 Configuration
S3_BUCKET_NAME=ensureu-assets-dev
S3_REGION=ap-south-1
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_PREFIX=uploads

# Local storage paths (for STORAGE_TYPE=LOCAL)
CSV_FILE_PATH=/var/ensureu/csv/
FREE_CSV_FILE_PATH=/var/ensureu/csv/free/
STATIC_IMAGE_PATH=/var/ensureu/images/

# ===========================================
# AI Service Configuration
# ===========================================
AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_API_KEY=

# ===========================================
# Notification Service (ClickSend)
# ===========================================
NOTIFICATION_KEY=your-clicksend-api-key
NOTIFICATION_USER=your-clicksend-username

# ===========================================
# Health Check
# ===========================================
MANAGEMENT_HEALTH_MAIL_ENABLED=false
