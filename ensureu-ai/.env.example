# EnsureU AI Service Configuration

# Service Settings
DEBUG=true
SERVICE_NAME=ensureu-ai
VERSION=1.0.0

# LLM Provider (claude | openai | ollama)
LLM_PROVIDER=claude

# Anthropic/Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_EMBED_MODEL=nomic-embed-text

# MongoDB (same as main EnsureU backend)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=ensureu

# EnsureU Backend Integration
ENSUREU_BACKEND_URL=http://localhost:8282/api
ENSUREU_API_KEY=

# JWT Configuration (must match main backend)
JWT_SECRET=mySecret
JWT_ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=30/minute

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379
